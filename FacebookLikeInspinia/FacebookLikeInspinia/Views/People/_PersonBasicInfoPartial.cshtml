@using FacebookLikeInspinia.ViewModels.People
@model PersonBasicInfoViewModel
<div class="col-lg-3">
    <div class="contact-box center-version">
        <a href="/People/Detail?userId=@Model.UserId">

            <img alt="image" class="rounded-circle" src="@Model.Base64ProfileImage">

            <h3 class="m-b-xs"><strong>@Model.FullName</strong></h3>
            <div>
                <span>@Model.PostCount Posts</span> |
                <span>@Model.FollowingCount Following</span> |
                <span>@Model.FollowerCount Followers</span>
            </div>

        </a>
        <div class="contact-box-footer">
            <div class="m-t-xs ">
                @if (Model.IsFollowedByCurrentUser)
                {
                    <a class="btn btn-xs btn-white text-info no-hover" data-follow-action-user-id="@Model.UserId">

                        <i class="fa fa-check "></i> Following
                    </a>
                }
                else
                {
                    <a class="btn btn-xs btn-white follow-action" data-follow-action-user-id="@Model.UserId">

                        <i class="fa fa-user-plus"></i> Follow
                    </a>
                }

            </div>
        </div>

    </div>
</div>