@using FacebookLikeInspinia.ViewModels.Comment
@model IEnumerable<CommentItemViewModel>

@if (Model != null && Model.Any())
{
    <div class="comment-list">
        @foreach (var comment in Model)
        {
            <div class="social-comment"  data-comment-id="@comment.CommentId">
                <a href="" class="pull-left">
                    <img alt="image" src="~/img/a1.jpg">
                </a>
                <div class="media-body">
                    <a href="#">
                        @comment.CommentedByFullName
                    </a>
                    @comment.Content
                    <br />
                    @if (comment.IsLikedByCurrentUser)
                    {
                        <a  class="small text-success"><i class="fa fa-thumbs-up"></i> @comment.LikesCount and you Liked this!</a>
                    }
                    else
                    {
                        <a class="small text-muted like-action"><i class="fa fa-thumbs-up"></i> <span class="like-action-count">@comment.LikesCount</span> Like this!</a>
                    }
                    - <small class="text-muted">@comment.CreatedAt.ToString("dd.MM.yyyy")</small>
                </div>
            </div>
        }
    </div>
}
